{
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "backend/frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "backend/frontend/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "backend/frontend/dist/$1"
      }
    ]
  }
  